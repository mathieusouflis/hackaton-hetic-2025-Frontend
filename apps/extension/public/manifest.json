{
  "manifest_version": 3,
  "name": "Mon Extension Chrome",
  "version": "1.0.0",
  "description": "Une extension Chrome avec React + Vite",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
